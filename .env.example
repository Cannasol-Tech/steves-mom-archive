# Steve's Mom AI Chatbot - Environment Variables
# Copy this file to .env and fill in your actual API keys

# =============================================================================
# AI Provider Configuration
# =============================================================================

# GROK (X.AI) - Primary AI Provider (Priority 1)
# Get your API key from: https://console.x.ai/
GROK_API_KEY=your_grok_api_key_here
GROK_ENABLED=true
GROK_MODEL=grok-3-mini
GROK_BASE_URL=https://api.x.ai
GROK_PRIORITY=1

# OpenAI - Secondary AI Provider (Priority 2)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ENABLED=true
OPENAI_MODEL=gpt-4
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_PRIORITY=2

# Anthropic Claude - Tertiary AI Provider (Priority 3)
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here
CLAUDE_ENABLED=true
CLAUDE_MODEL=claude-3-sonnet
CLAUDE_BASE_URL=https://api.anthropic.com
CLAUDE_PRIORITY=3

# Local AI Provider (Priority 4) - No API key needed
# Requires local Ollama installation: https://ollama.ai/
LOCAL_ENABLED=false
LOCAL_MODEL=llama-3.1-8b
LOCAL_BASE_URL=http://localhost:11434
LOCAL_PRIORITY=4

# =============================================================================
# AI Routing Configuration
# =============================================================================

# Routing strategy: cost_optimized, latency_optimized, capability_based, round_robin, failover, load_balanced
AI_ROUTING_STRATEGY=cost_optimized

# Cost threshold in USD
AI_MAX_COST_THRESHOLD=0.05

# Maximum latency in milliseconds
AI_MAX_LATENCY_MS=10000

# Number of retry attempts
AI_RETRY_ATTEMPTS=3

# =============================================================================
# Database Configuration
# =============================================================================

# SQLite database path (for local development)
DATABASE_URL=sqlite:///./steve-mom-archive.db

# =============================================================================
# Development Configuration
# =============================================================================

# Environment mode
ENVIRONMENT=development

# Debug logging
DEBUG=true

# =============================================================================
# Instructions
# =============================================================================

# 1. Copy this file to .env in the repository root
# 2. Fill in your actual API keys for the AI providers you want to use
# 3. At minimum, configure one AI provider (GROK_API_KEY recommended)
# 4. Run 'make preview' to start the development servers
# 5. The backend will automatically use the highest priority available provider

# Note: The backend will fall back to mock responses if no AI providers are configured
# This allows the application to run for testing even without API keys
